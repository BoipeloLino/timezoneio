.app-container
  display: flex
  min-width: 880px

$sidebarWidth = 180px
$sidebarPadding = 1em

.app-sidebar
  flex-shrink: 0
  width: $sidebarWidth
  padding: $sidebarPadding
  background: $fillColor

.app-sidebar--time
  margin: 0
  font-size: 2em
  text-align: center
  font-weight: normal

.app-sidebar--button-row
  display: flex
  justify-content: space-between

// .app-sidebar--format-select
//   text-align: center


.app-sidebar--admin
  margin: 1em 0
  width: "calc(%s - 2 * %s)" % ($sidebarWidth $sidebarPadding)

  button
    width: 100%

// TOOLBAR DESIGN START ------------------------------------------------------
.app-container.app-with-toolbar
  display block

$toolbarItemHeight = 32px;

.app-toolbar
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0.5em 1em
  border-bottom: 1px solid $lightBorderColor

  .site-branding
    margin: 0

  button.material-icons
    height: $toolbarItemHeight
    width: $toolbarItemHeight

.team-search

  .team-search-input
    $padding = 1.2em

    height: $toolbarItemHeight
    padding-left: $padding
    padding-right: $padding

    font-size: 14px
    border: 1px solid $lightBorderColor
    border-radius: 100px

.app-toolbar-branding,
.app-toolbar-actions
  width: 40%

.app-toolbar-main
  width: 10%
  min-width: 120px


.app-toolbar-actions
  display: flex
  justify-content: flex-end
  min-width: 300px; // to max sure we don't flex smaller

  > *
    margin-left: 1rem

.time-control
  position relative

  .time-control-menu
    display none

  &.time-control-open .time-control-menu
    display inherit

.time-control-time
  position relative // for menu
  z-index 1001
  margin 0
  font-size 1.4em
  text-align center
  font-weight normal
  cursor pointer

.time-control-menu
  position absolute
  z-index 100
  // top 110%
  // top calc(100% + 0.5em);
  top -0.5em
  left -100px
  right -100px
  margin 0 auto
  padding 2.5em 0.5em 0.5em
  width 200px

  background #fff
  border 1px solid $lightBorderColor
  shadow(2)

  transition all 100ms

  &.time-control-menu-slider-only
    background rgba(255,255,255, 0.2)
    border-color transparent
    shadow('none')

    .time-control-buttons
      opacity 0

  .time-slider
    margin 0.5em 0

  // Arrow hack
  // &::before
  //   content ""
