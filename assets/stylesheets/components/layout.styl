// Layout basics and components

*
  box-sizing: border-box

html,
body,
#page
  height: 100%

body
  margin: 0

  background: #fff

  font-size: 16px
  font-family: Lato, Roboto, 'Open Sans', Helvetica, sans-serif
  color: $textColor

.container
  height: 100%
  

// Full width section
.fw-section
  width: 100%;
  padding: 2em 0
  
  &.alt
    background: $fillColor
    
.content-container
  max-width: 800px
  margin: 0 auto;
  padding: 0 16px
  