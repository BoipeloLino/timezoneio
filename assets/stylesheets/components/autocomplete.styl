
.autocomplete
  position: relative
  transition: all 400ms
  border-radius: 2px
  text-align: left

.autocomplete--field:focus
  border-bottom-right-radius: 0
  border-bottom-left-radius: 0


.autocomplete--results
  box-shadow(2)
  position: absolute
  background: #fff

.autocomplete--option
  padding: 0.45em 0.6em
  cursor: pointer
  white-space: nowrap

  &.selected,
  &:hover
    background: $fillColor
